        <%= form.label "Select a Mistake:", class: "form-label"%>
        <%= form.collection_select( :mistake_id, Mistake.all, :id, :name, { prompt: "What crimes?" },{class: "form-select"}) %>
      </div>
  </div>
  <div>
    <%= form.submit "Submit", class: "btn btn-outline-danger"%>
    <button class="btn btn-outline-danger"><%= link_to "Cancel", user_mistakes_path %></button>
  </div>
<% end %>
